<%- include('./partials/head.ejs') %>
<h1>Chek gerust het toolboard!</h1>
<h2>Aan de slag! Check de Vervoerregio checklist.</h2>
<% principes.forEach(principe => { %>
  <div class="principe">
    <div class="principe__title">
      <span class="principe__number"><%= principe.index %></span>
      <%= principe.titel %>
    </div>
    <div class="principe__description">
      <%- principe.beschrijving.html %>
    </div>
    <% principe.richtlijnen.forEach(richtlijn => { %>
      <div class="richtlijn">
        <div class="richtlijn__title">
          <span class="richtlijn__number"><%= richtlijn.index %></span>
          <%= richtlijn.titel %>
        </div>
        <details>
          <summary>Voor meer informnatie</summary>
          <p><%- richtlijn.uitleg.html %></p>
        </details>
        <% richtlijn.succescriteria.forEach(succescriterium => { %>
          <div class="succescriterium">
            <div class="succescriterium__title">
              <span class="succescriterium__number"><%= succescriterium.index %></span>
              <%= succescriterium.titel %>
            </div>
          </div>
        <% })%>
      </div>
    <% })%>
  </div>
<% }) %>
